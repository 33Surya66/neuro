modules = ["nodejs-20", "dart-3.8"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NeuroVision"

[[workflows.workflow]]
name = "NeuroVision"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd neurovision/build/web && npx http-server -p 5000 -a 0.0.0.0 --cors"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
